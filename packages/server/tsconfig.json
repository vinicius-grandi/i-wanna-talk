{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/typeRoots", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
  "files": [
    "./src/typeRoots/index.d.ts",
  ],
}
